class pathmunge(
  $path = 'UNSET'
  ) {
  if is_array($path) == true {
    $more_path = join($path, ":")
  } else {
    validate_string($path)
    $more_path = $path
  }
  if ( $osfamily == 'Debian' ) {
    file { '/etc/profile.d/pathmunge.sh':
      ensure => present,
      owner  => '0',
      group  => '0',
      mode   => '0644',
      source => "puppet:///modules/pathmunge/pathmunge.sh",
    }
  } else {}
  if ( $osfamily =~ /(RedHat|Debian)/ ) and ( $path != 'UNSET' ) {
    file { '/etc/profile.d/thunder_path.sh':
      ensure  => present,
      owner   => '0',
      group   => '0',
      mode    => '0644',
      content => "#This file is created by the Puppet Pathmunge Module\npathmunge $more_path\n",
    }
  } else {}
}
